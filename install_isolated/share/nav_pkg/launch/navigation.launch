<launch>
	<!-- Load URDF -->
  	<param name="robot_description" textfile="$(find nav_pkg)/urdf/nav.urdf" />

	<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />

  	<!-- Robot State Publisher -->
 	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen" />
	<node pkg="map_server" type="map_server" name="map_server" args="$(find nav_pkg)/maps/map.yaml"/>

	<include file="$(find rplidar_ros)/launch/view_rplidar_a1.launch"/>
  	<include file="$(find ackermann_encoder_odometry)/launch/encoder_odometry.launch"/>
	
	<node pkg="amcl" type="amcl" name="amcl" output="screen">
	<param name="odom_model_type" value="diff"/>
	<param name="base_frame_id" value="base_link"/>
	<param name="odom_frame_id" value="odom"/>
	<param name="scan_topic" value="scan"/>
	<param name="transform_tolerance" value="0.5"/>
	</node>

	<node pkg="move_base" type="move_base" name="move_base" output="screen">
	<rosparam file="$(find nav_pkg)/config/costmap_common_params.yaml" command="load" />
	<rosparam file="$(find nav_pkg)/config/global_costmap_params.yaml" command="load" />
	<rosparam file="$(find nav_pkg)/config/local_costmap_params.yaml" command="load" />
	
	<param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
	<rosparam file="$(find nav_pkg)/config/teb_local_planner_params.yaml" command="load" />
	</node>

	<node pkg="twist_to_ackermann" type="twist_to_ackermann.py" name="twist_to_ackermann" output="screen">
	<param name="twist_topic" value="/cmd_vel"/>
	<param name="ackermann_cmd_topic" value="/ackermann_cmd"/>
	</node>

	<node pkg="rosserial_python" type="serial_node.py" name="serial_node" output="screen">
	  <param name="port" value="/dev/ttyUSB0"/>
	  <param name="baud" value="115200"/>
	</node>

</launch>
