<launch>

  <!-- Load URDF -->
  <param name="robot_description" textfile="$(find cartographer_ros)/urdf/saxx.urdf" />

  <!-- Robot State Publisher -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen" />

  <include file="$(find rplidar_ros)/launch/view_rplidar_a1.launch"/>
  <include file="$(find ackermann_encoder_odometry)/launch/encoder_odometry.launch"/>

  <!-- Cartographer Node -->
  <node name="cartographer_node" pkg="cartographer_ros" type="cartographer_node" args="
      -configuration_directory $(find cartographer_ros)/configuration_files
      -configuration_basename sax_2d.lua" output="screen">
    <remap from="scan" to="scan"/>
  </node>

  <!-- Occupancy Grid Publisher -->
  <node name="cartographer_occupancy_grid_node"
      pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node"
      args="-resolution 0.05"
      output="screen"/>

</launch>

